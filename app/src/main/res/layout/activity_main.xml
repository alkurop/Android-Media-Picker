<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alkurop.github.me.MainActivity">

    <Button
        android:id="@+id/imageFromCam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image from cam" />

    <Button
        android:id="@+id/imageFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image From gal" />

    <Button
        android:id="@+id/videoFromCam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video from cam" />

    <Button
        android:id="@+id/videoFromGal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video from gal" />

    <Button
        android:id="@+id/audioFromGal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio from gal" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
